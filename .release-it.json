{
  "git": {
    "requireBranch": "master",
    "commitMessage": "chore: release v${version}"
  },
  "gitlab": {
    "release": true
  },
  "npm": {
    "publish": false
  },
  "@release-it/conventional-changelog": {
    "infile": "CHANGELOG.md",
    "ignoreRecommendedBump": true,
    "strictSemVer": true,
    "preset": {
      "name": "conventionalcommits",
      "types": [
        {
          "type": "feat",
          "section": "‚ú® Features"
        },
        {
          "type": "fix",
          "section": "üêõ Bug Fixes"
        }
      ]
    }
  }
}
